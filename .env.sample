# Sample environment variables for local development / Docker
# Copy this file to `.env` and fill values as needed. `.env` is gitignored.

# Database
SPRING_DATASOURCE_URL=jdbc:postgresql://localhost:5432/ecommerce
SPRING_DATASOURCE_USERNAME=postgres
# Never commit real passwords to the repo. Set this in your environment or Docker secrets.
SPRING_DATASOURCE_PASSWORD=

# Hibernate
SPRING_JPA_HBM2DDL=update

# JWT (set a long random secret in production)
SPRING_APP_JWTSECRET=
SPRING_APP_JWTEXPIRATION_MS=6840000
SPRING_ECOM_APP_JWT_COOKIE_NAME=ecommerce-jwt-cookie

# Image URL
IMAGE_BASE_URL=http://localhost:8080/images

# Other helpful env vars
DOCKERHUB_USERNAME=
DOCKERHUB_TOKEN=
